# Startup iFolder
export MONO_PATH=@_prefix_@/lib:@_webbindir_@:@_casadir_@:$MONO_PATH
export LD_LIBRARY_PATH=@_prefix_@/lib:@_webbindir_@:/usr/lib:$LD_LIBRARY_PATH
cd @_prefix_@/bin
PID=`ps -o "\"%p\"," -o cmd | grep -i Simias | grep -v grep | cut -d"\"" -f2`
if test "$PID"
then
        if [ "$PID" -gt 0 ]
        then
                kill -9 $PID
        fi
fi
mono iFolderClient.exe $@

